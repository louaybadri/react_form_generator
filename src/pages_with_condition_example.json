{
  "pages": [
    {
      "id": "welcome",
      "title": "Welcome",
      "fields": []
    },
    {
      "id": "personalInfo",
      "title": "Personal Information",
      "fields": [
        {
          "name": "salutation",
          "type": "select",
          "options": [
            "Mr",
            "Mrs",
            "Other"
          ],
          "required": true
        },
        {
          "name": "firstName",
          "type": "text",
          "required": false,
          "validation": {
            "type": "regex",
            "pattern": "^.{2,}$",
            "message": "First name must be at least 2 characters long"
          }
        },
        {
          "name": "lastName",
          "type": "text",
          "required": true,
          "validation": {
            "type": "regex",
            "pattern": "^.{1,10}$",
            "message": "Last name must be at most 10 characters long"
          }
        },
        {
          "name": "birthdate",
          "type": "date",
          "required": false,
          "validation": {
            "type": "pastOnly",
            "message": "Date should be in the past"
          }
        },
        {
          "name": "email",
          "type": "email",
          "required": true
        }
      ]
    },
    {
      "id": "vehicleMainInfo",
      "title": "Vehicle Main Information",
      "conditional": {
        "type": "not",
        "conditions": [
          {
            "type": "field",
            "field": "firstName",
            "value": "louay"
          },
          {
            "type":"field",
            "field": "lastName",
            "value": "badri"
          }
        ]
      },
      "fields": [
        {
          "name": "FIN",
          "type": "text",
          "required": true
        },
        {
          "name": "licensePlate",
          "type": "text",
          "required": false
        },
        {
          "name": "firstRegistrationDate",
          "type": "date",
          "required": true,
          "validation": {
            "type": "pastOnly",
            "message": "Date should be in the past"
          }
        },
        {
          "name": "moreDetails",
          "type": "checkbox",
          "value": true,
          "label": "I want to enter more details"
        }
      ]
    },
    {
      "id": "vehicleModelInfo",
      "title": "Vehicle Model Information",
      "fields": [
        {
          "name": "manufacturer",
          "type": "text",
          "required": false
        },
        {
          "name": "carModel",
          "type": "text",
          "required": false
        }
      ],
      "conditional": {
        "type": "field",
        "field": "moreDetails",
        "value": "true"
      }
    },
    {
      "id": "review",
      "title": "Review",
      "fields": []
    }
  ]
}